{
    "name": "Email Highlighter",
    "version": "0.0.1",
    "description": "Highlights emails that match criteria given by the user",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "js/index.js"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Email Highlighter"
    },
    "manifest_version": 3
}